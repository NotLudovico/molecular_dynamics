def y_evolution_wrong(y, dt):
    return -2 * y * dt + np.sqrt(8 * y * dt) * np.random.normal(0, 1)


# Example of using simulate_traj for multiple trajectories and analyzing columns
times = [10, 20, 30, 40]
dt = 0.001

run_100_trajs(times, dt, y_evolution_wrong, True)








